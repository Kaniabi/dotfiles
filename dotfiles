export DOTFILES_INFO=true
export DOTFILES_DEBUG=false

export IS_MAC=false
export IS_LINUX=false
export IS_WSL=false
case "$(uname -s)" in
    Linux*)
      export IS_LINUX=true
      ;;
    Darwin*)
      export IS_MAC=true
      ;;
esac

if [[ $(uname -a) == *"WSL2"* ]]; then
  export IS_WSL=true
fi

if ( $IS_MAC ); then
  export USR_SHARE_DIR=/usr/local/share
else
  export USR_SHARE_DIR=/usr/share
fi

DOTFILES_INSTALL_PREFIX=${DOTFILES_INSTALL_PREFIX:-$(mktemp -d /tmp/dotfiles-XXXXXX)}
DOTFILES_INSTALL_DIR=""

function START () {
  FINISH
  INFO "*** $1 - ${2:-.}"
  DOTFILES_INSTALL_DIR="$DOTFILES_INSTALL_PREFIX/$1"
  rm -rf "$DOTFILES_INSTALL_DIR"
  mkdir -p "$DOTFILES_INSTALL_DIR"
  pushd "$DOTFILES_INSTALL_DIR"
}

function FINISH () {
  DEBUG "FINISH $DOTFILES_INSTALL_DIR"
  if [[ -n $DOTFILES_INSTALL_DIR ]]; then
    rm -rf $DOTFILES_INSTALL_DIR
    popd
    DOTFILES_INSTALL_DIR=""
  fi
  rm -rf $DOTFILES_INSTALL_PREFIX
}

function INFO () {
  if ( $DOTFILES_INFO ); then
    echo "$@"
  fi
}

function DEBUG () {
  if ( $DOTFILES_DEBUG ); then
    echo "*** DEBUG: $@"
  fi
}

function TODO () {
  echo "    TODO: $@"
}

function TEST_CMD () {
  echo "$(eval $@)"
}

function go_install_cmd () {
  local CMD=$1
  local PACKAGE=${2:-$1}
  if (( ! $+commands[$CMD] ))
  then
    INFO "go_install_cmd $@"
    go install $PACKAGE
  fi
}

function url_install_cmd () {
  local CMD=$1
  local URL=$2
  if (( ! $+commands[$CMD] ))
  then
    INFO "url_install_cmd $@"
    curl -s -o- $URL | bash
  fi
}

function INSTALL_GIT () {
  local REPO_URL=$1
  local LOCAL_DIR=$2
  if [ ! -d $LOCAL_DIR ]
  then
    INFO "INSTALL_GIT $@"
    git clone --quiet "$REPO_URL" "$LOCAL_DIR"
  fi
}

function CHECK_PKG () {
  if ( $IS_MAC ); then
    brew list | grep $1 &>> /dev/null
  else
    dpkg -s $1 &>> /dev/null
  fi
}

function INSTALL_PKG () {
  if CHECK_PKG $1; then
    return
  fi
  INSTALL $1
}

function SOURCE () {
  if [[ ! -f $1 ]]; then
    return
  fi
  DEBUG "SOURCE $1"
  source $1
}

function die () {
  echo $1
  exit 99
}

function DOWNLOAD () {
  DEBUG "DOWNLOAD $@"
  if [[ "$1" == "s3://"* ]]; then
    AWS_ACCESS_KEY_ID=${AWS_CREDENTIALS%,*} AWS_SECRET_ACCESS_KEY=${AWS_CREDENTIALS#*,} aws s3 cp $1 ${1##*/}
  else
    wget --no-verbose "$@"
  fi
}

function INSTALL () {
  INFO "INSTALL $@"
  local PACKAGE=$1
  if [[ $PACKAGE == ("http:"*|"https:"*|"s3://"*) ]]; then
    DOWNLOAD $PACKAGE
    PACKAGE=$(basename $PACKAGE)
  fi
  if [[ $PACKAGE == *".sh" ]]; then
    bash $PACKAGE
  elif [[ $IS_MAC == true ]]; then
    brew install -q $PACKAGE
  elif [[ $PACKAGE == *".deb" ]]; then
    shift
    sudo dpkg -i $PACKAGE $@
  else
    sudo apt-get install --no-install-recommends -y $@
  fi
}

function INSTALL_CMD () {
  local CMD=$1
  local PACKAGE=${2:-$1}
  if (( ! $+commands[$CMD] ))
  then
    INSTALL $PACKAGE
  fi
}

function ALIAS () {
  DEBUG "ALIAS $1"
  alias $1=$2
}

function EXPORT () {
  DEBUG "EXPORT $1"
  export $1=$2
}

function DOTFILES_SYMLINK () {
  local TARGET=$HOME/$1
  local SOURCE=$HOME/.dotfiles/home/${2:-$1}
  DEBUG "DOTFILES_SYMLINK $1"
  if [[ ! -e $TARGET ]]; then
    rm -f $TARGET
    ln -s $SOURCE $TARGET
  fi
}
